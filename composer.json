{
	"name": "skouat/ppde",
	"type": "phpbb-extension",
	"description": "An extension which allows you to add a PayPal donation page on your phpBB board",
	"version": "1.0.0-dev",
	"keywords": ["phpbb", "extension", "paypal"],
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Skouat",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": ">=5.3.3"
	},
	"require-dev": {
		"phpbb/epv": "dev-master"
	},
	"extra": {
		"display-name": "PayPal Donation Extension",
		"soft-require": {
			"phpbb/phpbb": ">=3.1.0-RC2,<3.2.*@dev"
		},
		"version-check": {
			"host": "skouat.github.io",
			"directory": "/ext_paypal_donation",
			"filename": "ppde_version_check.json"
		}
	}
}
